<%= form_with model: project do |f| %>
  <div>
    <div class="my-3">
      <%= f.label :title %>
      <%= f.text_field :title %>
      <% if @project.errors.include?(:title) %>
        <% @project.errors.full_messages_for(:title).each do |msg| %>
          <p><%= msg %></p>
        <% end %>
      <% end %>
    </div>

    <div class="my-3">
      <%= f.label :acquired_at %>
      <%= f.date_field :acquired_at %>
      <% if @project.errors.include?(:acquired_at) %>
        <% @project.errors.full_messages_for(:acquired_at).each do |msg| %>
          <p><%= msg %></p>
        <% end %>
      <% end %>
    </div>

    <div class="my-3">
      <%= f.label :status %>
      <%= f.select :status_id, Status.all.map{ |s| [s.title, s.id] }, {} %>
      <% if @project.errors.include?(:status) %>
        <% @project.errors.full_messages_for(:status).each do |msg| %>
          <p><%= msg %></p>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="my-3">
    <%= f.label :description %>
    <%= f.text_area :description %>
    <% if @project.errors.include?(:description) %>
      <% @project.errors.full_messages_for(:description).each do |msg| %>
        <p><%= msg %></p>
      <% end %>
    <% end %>
  </div>

  <div>
    <%= link_to "Cancel", root_path %>

    <%= f.submit "Submit" %>
  </div>

<% end %>