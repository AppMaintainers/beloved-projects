<div class="container mx-auto">
  <div class="mt-5">
    <div class="mb-3">
      <%= @project.title %>
    </div>

    <span>Status:</span>
    <div class="px-2 align-top w-auto text-white" style="background: <%= @project.status.background %>">
       <%= @project.status.title %>
    </div>
    <br>
    <span>Moved to our ownership at <strong><%= @project.acquired_at.strftime("%Y, %B") %></strong></span><br>
  </div>
  <div>
    <strong>Attached members:</strong>

    <% @project.maintainers.each do |maintainer| %>
      <%= link_to maintainer.first_name, maintainer %>
    <% end %>

  </div>

  <div>
    <h4>Description</h4>
    <%= @project.description %>
  </div>

  <div>
    <h4>Accounts</h4>
    <%= button_to "Add new Account", new_project_account_path(@project), method: :get, class: "btn btn-primary" %>
    <% if @project.accounts.any? %>
      <table class="table">
        <thead>
          <th>Name</th>
          <th>Description</th>
        </thead>
        <tbody>
          <% @project.accounts.each do |account| %>
            <tr>
              <td><%= account.name %></td>
              <td><%= account.description %></td>
            <tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p>No accounts could be found for this project.</p>
    <% end %>
  </div>

  <% if policy(@project).edit? %>
    <%= link_to 'Edit', edit_project_path, class: "btn btn-outline-primary" %>
  <% end %>
</div>
