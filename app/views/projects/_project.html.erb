<div id="project-<%= project.id %>" class="bg-white m-3 px-4 py-3"
     style="border-left: 6px solid <%= project.status.background %>">
  <h2><%= link_to project.title, project%></h2>
  <span class="pt-3">Associated users:</span>
  <ul>
    <% project.users.each do |user| %>
    <li><%= link_to user.first_name, user %></li>
    <% end %>
  </ul>
</div>