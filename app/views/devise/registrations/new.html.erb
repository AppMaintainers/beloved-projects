<div class="container max-w-full mx-auto py-6">
  <div class="max-w-sm mx-auto px-6">
    <h2 class="text-center text-3xl">Sign up</h2>
    <div class="relative flex flex-wrap">
      <div class="w-full relative p-5 rounded-md">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field pb-3">
            <%= f.label :first_name %><br/>
            <%= f.text_field :first_name, placeholder: "First name", class: "w-full bg-gray-200 py-2 px-3" %>
          </div>

          <div class="field pb-3">
            <%= f.label :last_name %><br/>
            <%= f.text_field :last_name, placeholder: "Last name", class: "w-full bg-gray-200 py-2 px-3" %>
          </div>

          <div class="field pb-3">
            <%= f.label :email %><br/>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "E-mail", class: "w-full bg-gray-200 py-2 px-3" %>
          </div>

          <div class="field pb-3">
            <%= f.label :password %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br/>
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "w-full bg-gray-200 py-2 px-3" %>
          </div>

          <div class="field pb-3">
            <%= f.label :password_confirmation %><br/>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password confirmation", class: "w-full bg-gray-200 py-2 px-3" %>
          </div>

          <div class="actions text-center my-4">
            <%= f.submit "Sign up", class: "bg-white text-blue-600 border-2 border-blue-600 hover:bg-blue-600 duration-100 px-5 py-1 rounded-sm cursor-pointer hover:text-white w-full" %>
          </div>
        <% end %>
        <div class="underline">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>