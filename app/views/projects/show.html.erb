<div class="container mx-auto">
  <div class="mt-5">
    <div class="mb-3">
      <%= @project.title %>
    </div>

    <span>Status:</span>
    <div class="px-2 py-1 align-top w-auto text-white" style="background: <%= @project.status.background %>">
       <%= @project.status.title %>
    </div>
    <br>
    <span>Moved to our ownership at <strong><%= @project.acquired_at.strftime("%Y, %B") %></strong></span><br>
  </div>
  <div>
    <strong>Attached members:</strong>

    <% @project.users.each do |user| %>
      <%= link_to user.first_name, user %>
    <% end %>

  </div>

  <div>
    <h4>Description</h4>
    <%= @project.description %>
  </div>

  <% unless current_user.nil? %>
    <%= link_to 'Edit', edit_project_path, class: "px-4 py-2 text-white" %>
  <% end %>
</div>