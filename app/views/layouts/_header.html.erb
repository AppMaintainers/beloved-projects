<header class="navbar navbar-expand-md navbar-dark navbar-overlap d-print-none">
  <div class="container-xl">
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar-menu"
            aria-controls="navbar-menu" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <h1 class="navbar-brand navbar-brand-autodark d-none-navbar-horizontal pe-0 pe-md-3">
      <%= link_to root_path do %>
        <span class="">App Maintainers' DASHBOARD</span>
      <% end %>
    </h1>
    <div class="navbar-nav flex-row order-md-last">
      <% if user_signed_in? %>
        <div class="nav-item dropdown">
          <a href="#" class="nav-link d-flex lh-1 text-reset p-0" data-bs-toggle="dropdown" aria-label="Open user menu">
            <div class="d-none d-xl-block ps-2">
              <div><%= current_user.first_name %> <%= current_user.last_name %></div>
            </div>
          </a>
          <div class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
            <%= link_to 'Profile', current_user, class: 'dropdown-item' %>
            <% if current_user.admin %>
              <%= link_to 'Admin', users_path, class: 'dropdown-item' %>
            <% end %>
            <div class="dropdown-divider"></div>
            <%= link_to 'Settings', edit_user_registration_path, class: 'dropdown-item' %>
            <%= link_to 'Logout', destroy_user_session_path, class: 'dropdown-item' %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="collapse navbar-collapse" id="navbar-menu">
      <div class="d-flex flex-column flex-md-row flex-fill align-items-stretch align-items-md-center">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/">
              <span class="nav-link-icon d-md-none d-lg-inline-block">
                <%= inline_svg_pack_tag('static/@tabler/icons/icons/home.svg') %>
              </span>
              <span class="nav-link-title"> Projects </span>
            </a>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#navbar-help" data-bs-toggle="dropdown"
               data-bs-auto-close="outside" role="button" aria-expanded="false">
              <span class="nav-link-icon d-md-none d-lg-inline-block">
                <%= inline_svg_pack_tag('static/@tabler/icons/icons/lifebuoy.svg') %>
              </span>
              <span class="nav-link-title">Help</span>
            </a>
            <div class="dropdown-menu">
              <a class="dropdown-item" href="https://appmaintainers.com">
                App Maintainers website
              </a>
              <a class="dropdown-item" href="mailto:info@appmaintainers.com" target="_blank" rel="noopener">
                Contact us by email
              </a>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </div>
</header>
