<!DOCTYPE html>
<html>
  <head>
    <title>BelovedProjects</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <%= render 'layouts/header' %>

    <% # Messages %>
    <% flash.each do |type, msg| %>
      <div class="toast align-items-center <%= bootstrap_class_for_toast(type) %> border-0" role="alert"
           aria-live="assertive" aria-atomic="true" data-bs-autohide="true" id="unique">
        <div class="d-flex">
          <div class="toast-body">
            <%= msg %>
          </div>
          <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
      </div>

      <script>
        toastFade = document.getElementById("unique")
        const toast = new bootstrap.Toast(toastFade)

        toast.show()
      </script>
    <% end %>

    <%= yield %>
    </body>
</html>
