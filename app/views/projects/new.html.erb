<div class="container mx-auto">
  <h2 class="text-3xl py-8">Create new project</h2>

  <div class="max-w-xs bg-white p-5 shadow-md rounded-md">
    <%= form_with model: @project, url: projects_path, method: :post do |f| %>
      <%= f.label :title, class: "block text-gray-700" %>
      <%= f.text_field :title, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>

      <%= f.label :status, class: "block text-gray-700" %>
      <%= f.select :status_id, Status.all.map{ |s| [s.title, s.id] }, {},
                   {class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline bg-white"} %>

      <%= f.label :context, class: "block text-gray-700" %>
      <%= f.text_area :context, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>

      <%= f.submit "Submit", class: "shadow bg-purple-700 hover:bg-purple-500 duration-150 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded w-full mt-4" %>
    <% end %>
  </div>

</div>