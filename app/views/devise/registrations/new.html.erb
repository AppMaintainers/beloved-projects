<div class="container mx-auto">
  <div class="mx-auto">
    <h2 class="text-center">Sign up</h2>
    <div class="flex-wrap">
      <div class="p-5">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="pb-3">
            <%= f.label :first_name %><br/>
            <%= f.text_field :first_name, placeholder: "First name", class: "py-2 px-3" %>
          </div>

          <div class="pb-3">
            <%= f.label :last_name %><br/>
            <%= f.text_field :last_name, placeholder: "Last name", class: "py-2 px-3" %>
          </div>

          <div class="pb-3">
            <%= f.label :email %><br/>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "E-mail", class: "py-2 px-3" %>
          </div>

          <div class="pb-3">
            <%= f.label :password %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br/>
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "py-2 px-3" %>
          </div>

          <div class="pb-3">
            <%= f.label :password_confirmation %><br/>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password confirmation", class: "py-2 px-3" %>
          </div>

          <div class="text-center my-4">
            <%= f.submit "Sign up", class: "bg-white border-2 px-5 py-1" %>
          </div>
        <% end %>
        <div>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>