<div class="container mx-auto">
  <div class="py-5">
    <div class="text-3xl font-bold">
      <%= @project.title %>
    </div>
    <div class="px-2 py-1 align-top mt-1 rounded-full text-xs w-auto inline-block text-white" style="background: <%= @project.status.background %>">
      <%= @project.status.title %>
    </div>

  </div>
  <div class="display-inline">
    <strong>Members attached:</strong>
    <div>
      <% @project.users.each do |user| %>
        <%= user.first_name %>
      <% end %>
    </div>
  </div>

  <div class="content py-8">
    <%= @project.context %>
  </div>

  <% unless current_user.nil? %>
    <%= link_to 'Edit', edit_project_path %>
  <% end %>
</div>