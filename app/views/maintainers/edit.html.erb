<div class="page-body">
  <div class="container-xl">
    <div class="row row-cards">
      <div class="col-12">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title">Add Maintainer for <strong><%= @project.title %></h3>
          </div>
          <table class="table table-striped">
            <thead><tr>
              <th scope="col">#</th>
              <th scope="col">Name</th>
              <th scope="col">Add or Remove</th>
            </tr></thead>
            <tbody>
              <% @users.each do |user| %>
              <tr><th scope="row"><%= user.id %></th>
                  <td><%= user.first_name %></td>
                  <td>
                    <% if @project.maintainers.include?(user) %>
                      <%= link_to 'Remove', project_maintainer_connection_path(@project, user),
                                  method: :delete, class: 'btn btn-danger' %>
                    <% else %>
                      <%= link_to 'Add', project_maintainer_connection_path(@project, user),
                                  method: :post, class: 'btn btn-success' %>
                    <% end %>
              </tr></td>
              <% end %>
            </tbody>
          </table>

          </div>
          <%= link_to 'Back', project_path(@project), class: 'btn btn-warning' %>
          </div>
        </th>
    </div>
  </div>
</div>
