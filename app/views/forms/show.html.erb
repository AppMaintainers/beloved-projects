<div class="page-body">
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="container container-tight py-4">
          <div class="card card-md">
            <div class="card-body">
              <p class="fw-bold fs-3"><%= @form.title %></p>
              <% if @form.description.present? %>
                <p><%= @form.description %></p>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <div class="container container-tight py-4">
          <div class="card card-md">
            <div class="card-body">
              <%= form_with model: Feedback, url: feedbacks_path(secret: params[:secret]), method: :post do |f| %>
                <%= f.hidden_field :form_id, value: @form.id %>
                <% @questions.each do |question| %>
                  <%= render question.class.to_s.underscore, question: question, f: f %>
                <% end %>
                <%= f.submit 'Submit', class: 'btn btn-primary' %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
