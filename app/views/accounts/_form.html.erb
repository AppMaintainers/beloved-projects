<%= form_with(model: @account, url: project_accounts_path(@project)) do |f| %>
  <div class="md:flex">
    <div class="flex-grow md:w-1/3 my-3">
      <%= f.label :name, class: "block text-gray-700 font-bold" %>
      <%= f.text_field :name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      <% if @account.errors.include?(:name) %>
        <% @account.errors.full_messages_for(:name).each do |msg| %>
          <p class="text-red-500"><%= msg %></p>
        <% end %>
      <% end %>
    </div>

    <div class="flex-grow md:w-1/3 my-3">
      <%= f.label :description, class: "block text-gray-700 font-bold" %>
      <%= f.text_field :description, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      <% if @account.errors.include?(:description) %>
        <% @account.errors.full_messages_for(:description).each do |msg| %>
          <p class="text-red-500"><%= msg %></p>
        <% end %>
      <% end %>
    </div>

  
  </div>

  <div class="sm:flex">
    <%= link_to "Cancel", root_path,
                class: "flex-grow shadow bg-white duration-150 focus:shadow-outline
               focus:outline-none border-2 border-black font-bold py-2 px-4 rounded md:w-80 w-full mt-4 cursor-pointer text-center w-full block"  %>

    <%= f.submit "Submit",
                 class: "flex-grow shadow bg-purple-700 hover:bg-purple-500 duration-150 focus:shadow-outline
               focus:outline-none text-white font-bold py-2 px-4 rounded md:w-80 w-full mt-4 cursor-pointer sm:ml-3" %>
  </div>

<% end %>
