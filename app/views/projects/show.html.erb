<div class="container mx-auto">
  <div class="py-5">
    <div class="text-3xl">
      <%= @project.title %>
    </div>
    <div class="px-2 py-1 align-top mt-1 rounded-full text-xs w-auto inline-block text-white" style="background: <%= @project.status.background %>">
      <%= @project.status.title %>
    </div>

  </div>
  <div class="display-inline">
    <span>Members attached:</span>
    <div>
      <% @project.users.each do |user| %>
        <% if user.image.attached? %>
          <%= link_to image_tag(user.image, size:"28", class: "rounded-full"), user %>
        <% else %>
          <%= link_to image_tag("default_avatar.jpg", size:"25", class: "rounded-full"), user %>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="content py-8">
    <%= @project.context %>
  </div>
</div>