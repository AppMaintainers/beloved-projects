<div class="container">
  <div class="row">
    <div class="col">
      <h1 class="text-center text-white">Sign in</h1>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <div class="container container-tight py-4">
        <div class="card card-md">
          <div class="card-body">
            <%= form_for(resource, as: resource_name, url: magic_link_path) do |f| %>
              <h2>Login with Magic Link</h2>
              <div class="mb-3">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: 'email', placeholder: 'E-mail', class: 'py-2 px-3' %>
              </div>
              <div class="text-center my-4">
                <%= f.submit 'Magic link', class: 'btn btn-primary w-100' %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="col">
      <div class="container container-tight py-4">
        <div class="card card-md">
          <div class="card-body">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <h2>Login with email and password</h2>
              <div class="mb-3">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: 'email', placeholder: 'E-mail', class: 'py-2 px-3' %>
              </div>
              <div class="mb-3">
                <%= f.label :password %><br />
                <%= f.password_field :password, autocomplete: 'current-password', placeholder: 'Password', class: 'py-2 px-3' %>
              </div>
              <% if devise_mapping.rememberable? %>
                <div>
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
              <% end %>
              <div class="text-center my-4">
                <%= f.submit 'Sign in', class: 'btn btn-primary w-100' %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="flex-wrap">
    <div class="p-5">
        <%= render 'devise/shared/links' %>
      </div>
    </div>
  </div>
</div>
