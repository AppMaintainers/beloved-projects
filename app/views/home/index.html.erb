<div class="container mx-auto">
  <% if @projects.any? %>
    <% if params[:all] == 'true' %>
      <%= link_to 'View my projects', root_path(all: 'false'), class: 'btn btn-primary' %>
    <% else %>
      <%= link_to 'View all projects', root_path(all: 'true'), class: 'btn btn-primary' %>
    <% end %>
    <div class="grid">
      <% @projects.each do |project| %>
        <%= render "projects/project", project: project %>
      <% end %>
    </div>
  <% else %>
    <%= link_to 'View all projects', root_path(all: 'true'), class: 'btn btn-primary' %>
    <p>No projects could be found.</p>
  <% end %>
</div>
